<%= form_for ([@podcast]) do |f| %>

  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :thumbnail %><br/>
    <%= f.file_field :thumbnail %>
  </div>

   <div class="field">
    <%= f.label :itunes %><br />
    <%= f.text_field :itunes %>
  </div>

  <div class="field">
    <%= f.label :soundcloud %><br />
    <%= f.text_field :soundcloud %>
  </div>

  <div class="actions">
    <%= f.submit class: "button button_soas button_block" %>
  </div>

<% end %>
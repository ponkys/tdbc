<div id="banner" class="podcast_banner">
	<h1>Find your next favourite podcast!</h1>
</div>

<div id="podcast" class="cf">
	<div class="wrapper">
		<ul class="cf">
			<% @podcasts.each do |podcast| %>
				<%= link_to podcast do %>
					<li>
						<%= image_tag podcast.thumbnail.url(:medium) %>
						<div class="podcast_overview">
							<h2><%= podcast.title %></h2>
							<p class="episode_count"><%= @episode.count %> Episodes</p>
						</div>	
					</li>
				<% end %>
			<% end %>
		</ul>

		<%= will_paginate @podcast, previous_label: "Previous", next_labe: "Next"  %>

	</div>
</div>



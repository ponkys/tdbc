<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= yield :stylesheets %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,700,400italic' rel='stylesheet' type='text/css'>
  <meta name="description" content="Digital & Traditional Broadcasting Communication">
  <meta name="keywords" content="Empanadas, Bogotá, Ranking, Aplicación Web">
  <meta name="robots" content="index, follow">
  <meta name="viewport" content="user-scalable = no, initial-scale = 1.0, maximum-scale = 1.0, width = device-width">
  <%= favicon_link_tag 'favicon.ico' %>
  <meta name="author" content="Diego Mosquera Soto">
  <title><%= @title_browser.present? ? "#{@title_browser} | DTBC" : "Digital & Traditional Broadcasting Communication" %></title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if alert %>
		<div id="notice_wrapper" >
			<p class="alert">
				<%= alert %>
			</p>
		</div>
		<% elsif notice %>
		<div id="notice_wrapper" >
			<p class="notice">
				<%= notice %>	
			</p>
		</div>
	<% end %>

	<% unless current_page?(root_path) %>
		<%= render 'layouts/header'; %>
	<% end %>

	<%= yield %>

<script>
	$(document).ready(function(){
		setTimeout(function() {
			$('#notice_wrapper').fadeOut("slow", function() {
				$this.remove();
			});
		}, 4500 );
	});	
</script>

</body>
</html>

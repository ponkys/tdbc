	</script>
	<meta name="google-site-verification" content="K-79zarGkvbxvRMypuH3mCQm6jF78j_l7bR6XQf4fKg" />
	<!-- Google Analytics -->
</head>
<body>
	<% if alert %>
		<div id="notice_wrapper" >
			<p class="alert">
				<%= alert %>
			</p>
		</div>
		<% elsif notice %>
		<div id="notice_wrapper" >
			<p class="notice">
				<%= notice %>	
			</p>
		</div>
	<% end %>

	<% unless current_page?(root_path) %>
		<%= render 'layouts/header'; %>
	<% end %>

	<%= yield %>

	<script>
		$(document).ready(function(){
			setTimeout(function() {
				$('#notice_wrapper').fadeOut("slow", function() {
					$this.remove();
				});
			}, 4500 );
		});	
	</script>
</body>
</html>

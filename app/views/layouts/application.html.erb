<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= yield :stylesheets %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,700,400italic' rel='stylesheet' type='text/css'>
  <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="https://thawing-tor-3074.herokuapp.com/feed?format=rss">
  <meta name="description" content="Platform for the Digital & Traditional Broadcasting Communication course from SOAS, University of London">
  <meta name="keywords" content="Empanadas, Bogotá, Ranking, Aplicación Web">
  <meta name="robots" content="index, follow">
  <meta name="viewport" content="user-scalable = no, initial-scale = 1.0, maximum-scale = 1.0, width = device-width">
  <meta name="author" content="Diego Mauricio Mosquera Soto | wwww.ponkys.com">
  <title><%= @title_browser.present? ? "#{@title_browser} | Sounds Like SOAS" : "Sounds like SOAS" %></title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if alert %>
		<div id="notice_wrapper" >
			<p class="alert">
				<%= alert %>
			</p>
		</div>
		<% elsif notice %>
		<div id="notice_wrapper" >
			<p class="notice">
				<%= notice %>	
			</p>
		</div>
	<% end %>

	<% unless current_page?(root_path) %>
		<%= render 'layouts/header'; %>
	<% end %>

	<%= yield %>

<script>
	$(document).ready(function(){
		setTimeout(function() {
			$('#notice_wrapper').fadeOut("slow", function() {
				$this.remove();
			});
		}, 4500 );
	});	
</script>
</body>
</html>
